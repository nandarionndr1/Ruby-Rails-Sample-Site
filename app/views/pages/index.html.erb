<p id="notice"><%= notice %></p>


<div class="col-sm-12" style="padding: 100px">

<h1>Pages</h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Context</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <!-- -->
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= page.title %></td>
        <td><%= page.context %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<button class="btn-lg"><%= link_to 'New Page', new_page_path %></button>
</div>


<br>

