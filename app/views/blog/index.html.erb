<title>My <%= @page.name %></title>
<p id="notice"><%= notice %></p>


<div class="col-sm-12" style="padding: 100px">
<p><%= @page.context %></p>
<h1>Posts </h1>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <!--  <button class="btn-lg"><%= link_to 'New Page', new_post_path %></button> -->

</div>


<br>

